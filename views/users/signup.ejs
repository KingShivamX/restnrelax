<%- layout("./layouts/boilorplate.ejs") %>
<body>
    <div class="row mt-4">
        <div class="col col-8 offset-2">
            <h3>SignUp on Rest&Relax</h3><br>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback">Username Looks Good</div>
                    <div class="invalid-feedback">Username is Required</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                    <div class="valid-feedback">Email Looks Good</div>
                    <div class="invalid-feedback">Email is Required</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                    <div class="valid-feedback">Password Looks Good</div>
                    <div class="invalid-feedback">Password is Required</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Sign Up</button>
            </form>
        </div>
    </div>
</body>