<%- layout("./layouts/boilorplate.ejs") %>
<body>
<div class="row">
    <div class="col-12 col-md-8 offset-md-2">
    <br>
    <h3>Edit Your Listing</h3>
    <form method="post" action="/listing/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- using this a object will be sent to post, named listing, having all name:value pairs -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" id="title" class="form-control" value="<%= listing.title %>" required>
            <div class="invalid-feedback">Title is Required</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" id="description" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Description is Required</div>
        </div>
        
        <div class="mb-3">
            <p><i>Current Image Preview</i></p>
            <img width="250px" src="<%= orgImgUrl %>">
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">New Image</label>
            <input type="file" name="listing[image]" id="image" class="form-control">
        </div>


        <!--  -->

        <div class="mb-3">
            <label for="tags" class="form-label">Add The Tags Using Buttons</label>
            <div class="tag-cont tag-container mb-2" >
                <button class="btn btn-secondary btn-tags" id="Beachfront" type="button">Beachfront</button>
                <button class="btn btn-secondary btn-tags" id="Boats" type="button">Boats</button>
                <button class="btn btn-secondary btn-tags" id="Camping" type="button">Camping</button>
                <button class="btn btn-secondary btn-tags" id="Arctic" type="button">Arctic</button>
                <button class="btn btn-secondary btn-tags" id="Castles" type="button">Castles</button>
                <button class="btn btn-secondary btn-tags" id="Farms" type="button">Farms</button>
                <button class="btn btn-secondary btn-tags" id="Island" type="button">Island</button>
                <button class="btn btn-secondary btn-tags" id="Mansion" type="button">Mansion</button>
                <button class="btn btn-secondary btn-tags" id="Rooms" type="button">Rooms</button>
                <button class="btn btn-secondary btn-tags" id="Towers" type="button">Towers</button>
            </div>
            <input type="text" name="listing[tags]" id="tags" value="<%= listing.tags.join(", ") %>" class="form-control tag-input" readonly required>
            <div class="invalid-feedback">Please Select Some Tags</div> 
        </div>          

        <!--  -->

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" id="price" class="form-control" value="<%= listing.price %>" required>    
            <div class="invalid-feedback">Please Enter Price</div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" id="location" class="form-control" value="<%= listing.location %>" required>    
                <div class="invalid-feedback">Location is Required</div>
            </div class="mb-3">
    
            <div class="mb-6 col-md-6">
                <label for="country" class="form-label">Country</label>
                <%- include("../includes/countries.ejs") %>
                <div class="invalid-feedback">Country is Required</div>
            </div>
            
        </div> 
        <button class="btn btn-dark edit-btn mt-4">Edit Listing</button>
        <br><br><br>
    </form>
</div>
</div>
</body>