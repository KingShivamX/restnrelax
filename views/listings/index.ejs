<%- layout("./layouts/boilorplate.ejs") %>
<!-- its searched in views folder -->
<!-- This is Body will be inserted in Boiler plate-->

<body>
<div id="filters">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <div><p>Trending</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <div><p>Rooms</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <div><p>Iconic Cities</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <div><p>Mountains</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <div><p>Castles</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <div><p>Amazing Pools</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-person-hiking"></i></div>
        <div><p>Camping</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <div><p>Farms</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <div><p>Arctic</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <div><p>Islands</p></div>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-anchor"></i></div>
        <div><p>Boats</p></div>
    </div>
    <!-- <div class="filter">
        <div><i class="fa-solid fa-fire-burner"></i></div>
        <div>Chef's kitchen</div>
    </div> -->

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
          </div>
    </div>
</div>  

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <% for(listing of allListing) { %>
        <a href="/listing/<%= listing.id %>" class="listing-link">
            <div class="card col index-page-card" >
                <img src=" <%= listing.image.url %>" class="card-img-top" alt="Listing Image"  >
                <div class="card-img-overlay">Click To Show</div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br>            
                    <%= listing.price.toLocaleString("en-IN") %> / Night
                    <i class="taxinfo hidden"> &nbsp; +18% GST</i>
                  </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
</body>
