<%- layout("./layouts/boilorplate.ejs") %>
<!-- its searched in views folder -->
<!-- This is Body will be inserted in Boiler plate-->
<body>

<div id="wrapper ">

    <div id="filters">
        <div>
            <div id="Beachfront"  class="filter">
                <div><img src="assets/beach-front.jpeg" alt=""></div>
                <div><p>Beachfront</p></div>
            </div>
        </div>
        <div>
            <div id="Boats"  class="filter">
                <div><img src="assets/boats.jpg" alt=""></div>
                <div><p>Boats</p></div>
            </div>
        </div>
        <div>
            <div id="Camping"  class="filter">
                <div><img src="assets/camping.jpg" alt=""></div>
                <div><p>Camping</p></div>
            </div>
        </div>
        <div>
            <div id="Arctic" class="filter">
                <div><img src="assets/arctic.jpg" alt=""></div>
                <div><p>Arctic</p></div>
            </div>
        </div>
        <div>
            <div id="Castles"  class="filter">
                <div><img src="assets/castles.jpeg" alt=""></div>
                <div><p>Castles</p></div>
            </div>
        </div>
        <div>
            <div id="Farms"  class="filter">
                <div><img src="assets/farms.jpeg" alt=""></div>
                <div><p>Farms</p></div>
            </div>
        </div>
        <div>
            <div id="Island"  class="filter">
                <div><img src="assets/island.jpg" alt=""></div>
                <div><p>Island</p></div>
            </div>
        </div>
        <div>
            <div id="Mansion"  class="filter">
                <div><img src="assets/mansion.jpg" alt=""></div>
                <div><p>Mansion</p></div>
            </div>
        </div>
        <div>
            <div id="Rooms"  class="filter">
                <div><img src="assets/rooms.jpg" alt=""></div>
                <div><p>Rooms</p></div>
            </div>
        </div>
        <div>
            <div id="Towers"  class="filter">
                <div><img src="assets/towers.jpg" alt=""></div>
                <div><p>Towers</p></div>
            </div>
        </div>
        <div class="taxxx">
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch tax-toggle-inner">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Show Taxes</label>
                </div>
            </div>
        </div>
    </div>  
    
    <div id="listing" class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of allListing) { %>
            <a href="/listing/<%= listing.id %>" class="listing-link" data-tags="<%= JSON.stringify(listing.tags) %>">
                <div class="card col index-page-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image">
                    <div class="card-img-overlay">Click To Show</div>
                    <div class="card-body">
                      <p class="card-text">
                        <b class="list-title"><%= listing.title %></b><br>            
                        <b class="list-price"><%= listing.price.toLocaleString("en-IN") %> / Night</b>
                        <i class="taxinfo hidden list-price"> &nbsp; +18% GST</i>
                      </p>
                    </div>
                </div>
            </a>    
        <% } %>
    </div>
    
</div>


</body>