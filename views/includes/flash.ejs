<!-- checking length as successMsg is array, it should not be zero. -->

<% if(successMsg && successMsg.length) { %> 
    <div class="alert alert-primary alert-dismissible fade show col-12 col-md-8 offset-md-2 mt-4" role="alert">
        <strong><%= successMsg %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- if listing not found this will show up. -->
<% if(errorMsg && errorMsg.length) { %> 
    <div class="alert alert-danger alert-dismissible fade show col-12 col-md-8 offset-md-2 mt-4" role="alert">
        <strong><%= errorMsg %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>